<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="360.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gbsnowday.snowday.controller.AboutController">
    <ImageView fitHeight="256.0" fitWidth="256.0" layoutX="14.0" layoutY="39.0" preserveRatio="true">
        <Image url="@/image/icon.png" />
    </ImageView>
    <Label alignment="CENTER" layoutX="280.0" layoutY="154.0" prefHeight="27.0" prefWidth="320.0" text="%dev_name">
        <font>
          <Font size="18.0" />
        </font>
    </Label>
    <Label alignment="CENTER" layoutX="280.0" layoutY="87.0" prefHeight="53.0" prefWidth="320.0" text="%app_name">
        <font>
          <Font size="35.0" />
        </font>
    </Label>
    <Label alignment="CENTER" layoutX="280.0" layoutY="52.0" prefHeight="35.0" prefWidth="320.0" text="%GBCS">
        <font>
          <Font size="22.0" />
        </font>
    </Label>
    <HBox layoutX="283.0" layoutY="220.0" prefHeight="64.0" prefWidth="320.0" spacing="16">
        <Button fx:id="btnTwitter" mnemonicParsing="false" onAction="#twitter" onMouseEntered="#setCursorHand" onMouseExited="#setCursorNormal" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: lightblue;">
            <graphic>
                <ImageView fitHeight="48.0" fitWidth="48.0">
                    <Image url="@/image/twitter.png" />
                </ImageView>
            </graphic>
         <tooltip>
            <Tooltip text="%dev_twitter" />
         </tooltip>
        </Button>
        <Button fx:id="btnEmail" layoutX="68.0" mnemonicParsing="false" onAction="#email" onMouseEntered="#setCursorHand" onMouseExited="#setCursorNormal" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: lightblue;">
            <graphic>
                <ImageView fitHeight="36.0" fitWidth="36.0">
                    <Image url="@/image/email.png" />
                </ImageView>
            </graphic>
         <tooltip>
            <Tooltip text="%email_desc" />
         </tooltip>
        </Button>
        <Button fx:id="btnWeb" layoutX="132.0" mnemonicParsing="false" onAction="#web" onMouseEntered="#setCursorHand" onMouseExited="#setCursorNormal" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: lightblue;">
            <graphic>
                <ImageView fitHeight="48.0" fitWidth="48.0">
                    <Image url="@/image/web.png" />
                </ImageView>
            </graphic>
         <tooltip>
            <Tooltip text="%site_desc" />
         </tooltip>
        </Button>
        <Button fx:id="btnGit" layoutX="200.0" mnemonicParsing="false" onAction="#git" onMouseEntered="#setCursorHand" onMouseExited="#setCursorNormal" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: lightblue;">
            <graphic>
                <ImageView fitHeight="48.0" fitWidth="48.0">
                    <Image url="@/image/github.png" />
                </ImageView>
            </graphic>
         <tooltip>
            <Tooltip text="%git_desc" />
         </tooltip>
        </Button>
    </HBox>
    <Button fx:id="btnInfo" layoutX="397.0" layoutY="315.0" mnemonicParsing="false" onAction="#showLicenseDialog" text="%action_info" />
   <Label layoutX="14.0" layoutY="331.0" text="%Version" />
</AnchorPane>
